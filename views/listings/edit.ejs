<%layout("/layouts/boilerplate")%>
<body>
    <form action="/listings/<%=listing._id%>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
    
    <div class="row mt-3">
        <div class="col-8 offset-2" >
                   <h2>Edit Your Listing</h2>
            <div class="mb-3">
        <div class="mb-3" >
            <label for="title"  class="form-label">title</label>
            <input type="text" name ="listing[title]" value="<%=listing.title%>" class="form-control" required>
               <div class="valid-feedback">Title looks good</div>
               <div class="invalid-feedback">Title is Mandatory </div>
        </div>

         <div class="mb-3" >
            <label for="description"  class="form-label">description</label>
            <textarea name="listing[description]" class="form-control" required><%=listing.description%></textarea >
            <div class="valid-feedback">description looks good</div>
            <div class="invalid-feedback    ">Description is Mandatory </div> 
        </div>

        <div class="mb-3">
            Original Listing Image <br>
            <img src="<%=originalImageUrl%>"><br>
        </div>

        <div class="mb-3" >
            <label for="image"  class="form-label">Upload Image</label>
            <input type="file"  name="listing[image]" class="form-control" />
              <div class="valid-feedback">image link looks good</div>
            <div class="invalid-feedback">image link is Mandatory </div> 
        </div>

        <div class="row">
            <div class="mb-3 col-md-6 " >
            <label for="location"  class="form-label">location</label>
            <textarea name="listing[location]"  class="form-control" required><%=listing.location%></textarea>  
              <div class="valid-feedback">Loction looks good</div>
            <div class="invalid-feedback">Location is Mandatory </div> 
        </div>
        

        <div class="mb-3 col-md-6 " >
            <label for="number"  class="form-label">price</label>
            <input type="number" name="listing[price]"  class="form-control" required value="<%=listing.price%>"> 
              <div class="valid-feedback">Price looks good</div>
            <div class="invalid-feedback">Price is Mandatory </div>  
        </div>
    </div>

  
    <button  class=" btn btn-dark submit-btn">submit</button>
    </div>
        </div>
    </div>
    
</body>
</html>