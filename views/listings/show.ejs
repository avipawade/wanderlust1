<%layout("/layouts/boilerplate")%>
<script>
  const mapToken = "<%=process.env.MAP_TOKEN%>";
  const listing = <%- JSON.stringify(list)%>;

</script>
<body>
<div>

<div class="row">
    <div class="col-8 offset-2" >
<div class="card mt-3">
    <h2><%=list.title%></h2>
  <img src="<%=list.image.url%>" class="card-img-top show-img" alt="...">
  <div class="card-body">
    <i>Owned By : <%=list.owner.username%></i> <br>
    <%=list.description%> <br>
    <%=list.location%> <br>
    &#8377; <%=list.price.toLocaleString("en-IN")%>
  </div>
</div>
   

<%if(currUser && list.owner._id.equals(currUser._id)){%>
   <div class="row mb-2 mt-3">
    <div class="col-1">
         <form action="/listings/<%=list._id%>/edit" method="get">
        <button class="btn btn-dark  ed-btn">Edit</button>
         </form>
    </div>
    <div class="col-1 mb-3" >
        <form action="/listings/<%=list._id%>?_method=DELETE" method="POST">
        <button class="btn btn-dark  ed-btn">Delete</button>
        </form>
    </div>
  <%}%>
  
    <hr>
    <div class="col-8 offset-2 mb-3">
      <% if(currUser){%>
      <h4>Leave Review</h4>

      <form action="/listings/<%=list._id%>/reviews" method="post" novalidate class="needs-validation">
      <!-- <div class="mb3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" id="rating" name="review[rating]" max="5" min = "1" class="form-range" >
      </div> -->
  <div class="mb3 mt-3">
  <fieldset class="starability-slot">
  <legend>Rating:</legend>
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
  </fieldset>
  </div> 
      <div class="mb3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea type="text" name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
         <div class="invalid-feedback">Please submit valid comments for review</div>
      </div>
     
       <br>
      <button class="btn btn-dark  ed-btn">Submit</button>

      </form>
      <%}%>
     
     
       <%if(list.reviews.length > 0){%>
<div class="row">
        <p><b>All Reviews</b></p>
         <%for(review of list.reviews) {%>
          <div class="card mb-3 col-5 ms-3">
            <div class="card-body">
              <h5 class="card-title">@<%=review.author.username%></h5>
              <p class="starability-result" data-rating="<%=review.rating%>"></p>
              <p class="card-text">comment : <%=review.comment%></p> 
              
            </div>
            <form action="/listings/<%=list.id%>/reviews/<%=review.id%>?_method=DELETE" method="post" class="mb-3">
               <button class="btn btn-sm btn-dark ">Delete</button>
            </form>
          </div>
        <%}%>
       </div>
        <%}%>
   
      
    
      </div>
   </div>
</div>

  
</div>
    </div>
</div>
<div class="col-8 offset-2 mb-3" >
  <h3>Where you'll be</h3>
  <div id="map"></div>

<script src="/js/map.js"></script>

</body>
